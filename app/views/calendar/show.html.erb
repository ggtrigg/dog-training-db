  <div class="col-sm-8 offset-sm-2 mt-5 text-center">
    <div class="well controls">
      <%= link_to calendar_path(date: @date - 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-backward"></i>
      <% end %>
      <%= "#{@date.strftime("%B")} #{@date.year}" %>
      <%= link_to calendar_path(date: @date + 1.month), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-forward"></i>
      <% end %>
    </div>
  </div>
  <div class="col-sm-8 offset-sm-2">
    <%= calendar @date do |date| %>
      <%= date.day %>
      <% if @events_by_date[date.to_s] %>
        <ul>
          <% @events_by_date[date.to_s].each do |event| %>
            <%# e_class = event.cancelled? ? "text-danger" : "" %>
            <li><%= link_to event.event_type.titleize, event %></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
  <div class="col-sm-8 offset-sm-2 mt-2">
      <%= link_to 'Clients', clients_path, class: 'btn btn-primary' %>
      <%= link_to 'New client', new_client_path, class: 'btn btn-primary' %>
      <%= link_to 'New event', new_event_path, class: 'btn btn-primary' %>
  </div>
