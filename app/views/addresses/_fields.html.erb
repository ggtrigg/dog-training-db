<div id="address-input-form">
  <div class="field form-group col-sm-6">
    <%= f.label :street1, class: 'control-label' %>
    <%= f.text_field :street1, class: 'form-control', id: 'street1' %>
  </div>
  <div class="field form-group col-sm-6">
    <%= f.label :street2, class: 'control-label' %>
    <%= f.text_field :street2, class: 'form-control', id: 'street2' %>
  </div>
  <div class="field form-group col-sm-8">
    <%= f.label :suburb, class: 'control-label' %>
    <%= f.text_field :suburb, class: 'form-control', id: 'suburb' %>
  </div>
  <div class="field form-group col-sm-4">
    <%= f.label :postcode, class: 'control-label' %>
    <%= f.number_field :postcode, class: 'form-control', id: 'postcode' %>
  </div>
</div>
