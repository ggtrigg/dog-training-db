<!DOCTYPE html>
<html>
  <head>
    <title>Dog Trainer's Database</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%# javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
    <%= favicon_pack_tag 'favicon.ico', :rel => 'shortcut icon' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <%= render "header" %>
        <div class="pull-right">
          <% if user_signed_in? then %>
            <%=
              link_to('Log out'.html_safe, destroy_user_session_path, method: 'delete')
            %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <% if notice.present? then %>
          <div class="col-sm-10 offset-sm-1 alert alert-info alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= notice %>
          </div>
        <% end %>
        <% if alert.present? then %>
          <div class="col-sm-10 offset-sm-1 alert alert-danger alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <%= alert %>
          </div>
        <% end %>
      </div>
      <div class="row border-top pt-2" id="application-body">
        <%= yield %>
      </div>
      <div class="row">
        <div class="col-sm-12" id="application-footer">
          <%= render "footer" %>
        </div>
      </div>
    </div> <!-- container -->
  </body>
</html>
