<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h2><%= @event.event_type.titleize %></h2>
      <p>
        <strong>When:</strong> <%= @event.date %><br/>
        <strong>Where:</strong> <%= @event.location %><br/>
        <strong>Cost:</strong> $<%= @event.price %><br/>
        <strong>Duration:</strong> <%= @event.duration %>
      </p>
      
      <h3><%= "Client".pluralize(@event.clients.count) %></h3>
      <%= render @event.clients %>

      <%= link_to 'Home', root_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
