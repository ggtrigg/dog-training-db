<%
    @event_select_types ||= Hash.new
    Event.event_types.keys.each {|e| @event_select_types[e.titleize] = e}
%>
<div class="field form-group col-sm-4">
  <%= f.label :event_type, class: 'control-label' %>
  <%= f.select :event_type, options_for_select(@event_select_types), {}, {class: 'form-control'} %>
</div>

<div class="field form-group col-sm-4">
  <%= f.label :duration, class: 'control-label' %>
  <div class="input-group">
    <%= f.number_field :duration, class: 'form-control' %>
    <div class="input-group-addon">minutes</div>
  </div>
</div>

<div class="field form-group col-sm-3">
  <%= f.label :price, class: 'control-label' %>
  <div class="input-group">
    <div class="input-group-addon">$</div>
    <%= f.number_field :price, class: 'form-control', step: 0.1 %>
  </div>
</div>

<div class="field form-group col-sm-5">
  <%= f.label :date, class: 'control-label' %>
  <%= f.datetime_local_field :date, class: 'form-control' %>
</div>

<div class="field form-group col-sm-6">
  <%= f.label :location, class: 'control-label' %>
  <%= f.text_field :location, class: 'form-control' %>
</div>
