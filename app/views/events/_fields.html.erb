<%
    @event_select_types ||= Hash.new
    Event.event_types.keys.each {|e| @event_select_types[e.titleize] = e}
%>

<div class="field form-group col-sm-4">
  <%= f.label :event_type, class: 'control-label' %>
  <%= f.select :event_type, options_for_select(@event_select_types), {include_blank: true}, {class: 'form-control', id: 'event-type'} %>
</div>

<div class="field form-group col-sm-4">
  <%= f.label :duration, class: 'control-label' %>
  <div class="input-group">
    <%= f.number_field :duration, class: 'form-control', id: 'duration' %>
    <span class="input-group-addon">minutes</span>
  </div>
</div>

<div class="field form-group col-sm-4">
  <%= f.label :price, class: 'control-label' %>
  <div class="input-group">
    <span class="input-group-addon">$</span>
    <%= f.number_field :price, class: 'form-control', id: 'price' %>
    <span class="input-group-addon">.00</span>
  </div>
</div>

<div class="field form-group col-sm-5">
  <%= f.label :date, class: 'control-label' %>
  <%= f.datetime_local_field :date, class: 'form-control', id: 'date' %>
</div>

<div class="field form-group col-sm-7">
  <%= f.label :location, class: 'control-label' %>
  <%= f.text_field :location, class: 'form-control', id: 'location' %>
</div>

