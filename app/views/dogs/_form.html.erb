<%= form_with(model: @dog.blank? ? [@client, @client.dogs.build ] : @dog, html: {role: "form"}, local: true) do |form| %>
  <div class="row">
    <div class="col-sm-12">
      <%= render 'dogs/fields', f: form %>
    </div>
  </div>
  <div class="row">
    <div class="field form-group col-sm-12">
    <%= form.submit class: 'btn btn-default' %>
  </div>
</div>
<% end %>
