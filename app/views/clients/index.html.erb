<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>Client list</h1>
 
      <table class="table table-striped">
        <tr>
          <th>Surname</th>
          <th>Firstname</th>
          <th>Phone #</th>
          <th># Dogs</th>
          <th></th>
        </tr>
       
        <% @clients.each do |client| %>
          <tr>
            <td><%= client.surname %></td>
            <td><%= client.firstname %></td>
            <td><%= client.phone_number %></td>
            <td><%= client.dogs.count %></td>
            <td><%= link_to 'Show', client_path(client), class: 'btn btn-default' %>
            <%= link_to 'Edit', edit_client_path(client), class: 'btn btn-warning' %>
            <%= link_to 'Destroy', client_path(client), class: 'btn btn-danger',
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </table>

      <%= link_to 'Home', root_path, class: 'btn btn-default' %>
    </div>
  </div>
</div>
